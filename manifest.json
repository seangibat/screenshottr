{
  "name": "Screenshottr",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Takes a screenshot of the current page and uploads it to imgur.",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    }
  },
  "commands": {
    "take-screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Take screenshot and upload to imgur."
    },
    "take-portion": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      },
      "description": "Screenshot portion of page and upload to imgur."
    }
  },
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
